option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: core/wsgi.py
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: core.settings
    PYTHONPATH: /opt/python/current/app/core:$PYTHONPATH

  aws:elbv2:listener:80:
    ListenerEnabled: 'true'
    Protocol: HTTP
  aws:elbv2:listener:5000:
    ListenerEnabled: 'true'
    Protocol: HTTP


container_commands:
  01wsgipass:
    command: 'echo "WSGIPassAuthorization On" >> ../wsgi.conf'


files:
  "/etc/httpd/conf.d/proxy.conf":
      mode: "000644"
      owner: root
      group: root
      content: |
        ProxyPass /ws/ ws://127.0.0.1:5000/ws/
        ProxyPassReverse /ws/ ws://127.0.0.1:5000/ws/

        ProxyPass /ws/newsfeed ws://127.0.0.1:5000/ws/newsfeed
        ProxyPassReverse /ws/newsfeed ws://127.0.0.1:5000/ws/newsfeed


        #Uncomment below for Option 3
        #ProxyPass / http://127.0.0.1:5000/
        #ProxyPassReverse / http://127.0.0.1:5000/
